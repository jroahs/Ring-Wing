# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ring-and-wing

# JWT Secret (change in production!)
JWT_SECRET=your-secret-key-here-change-this-in-production

# PayMongo API Keys
PAYMONGO_SECRET_KEY=sk_test_xxxxx
PAYMONGO_PUBLIC_KEY=pk_test_xxxxx
PAYMONGO_WEBHOOK_SECRET=whsk_xxxxx

# AI Services (optional)
OPENROUTER_API_KEY=your_openrouter_key_here
GEMINI_API_KEY=your_gemini_key_here

# Application URLs
FRONTEND_URL=https://<your-railway-domain>.railway.app
NODE_ENV=production
PORT=5000

# Backblaze B2 (optional - for file storage)
B2_ACCOUNT_ID=your_account_id
B2_ACCOUNT_TOKEN=your_app_key
B2_BUCKET_NAME=ring-and-wing-uploads

# Frontend Configuration (optional - set in Vite .env.production)
VITE_API_URL=https://<your-railway-domain>.railway.app
