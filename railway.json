{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node --max-old-space-size=512 --expose-gc server.js",
    "restartPolicyMaxRetries": 10,
    "healthchecks": {
      "readiness": {
        "path": "/api/health",
        "interval": 30,
        "timeout": 10
      }
    }
  }
}
